<%- include('../../../partials/headers/__header-dashboard.ejs', { title: 'Data Jabatan' }) %>
<%- include('../../../partials/navs/__nav-manajer.ejs') %>
<%- include('../../../partials/messages/__messages-dashboard.ejs') %>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3">
                            <h4 class="card-title mb-3 mb-md-0">Data Jabatan</h4>
                            <a href="/manajer/jabatan/buat" class="btn btn-primary btn-sm" data-loading>Tambah Jabatan</a>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover table-stacked">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Nama Jabatan</th>
                                        <th style="width: 200px;" class="text-right">Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (Array.isArray(jabatan) && jabatan.length) { %>
                                        <% for (let i = 0; i < jabatan.length; i++) { const item = jabatan[i]; %>
                                            <tr>
                                                <td data-label="No"><%= i + 1 %></td>
                                                <td data-label="Nama Jabatan"><%= item.nama_jabatan %></td>
                                                <td class="text-right" data-label="Aksi">
                                                    <div class="btn-actions">
                                                        <a href="/manajer/jabatan/edit/<%= item.id %>" class="btn btn-sm btn-outline-info" data-loading>Edit</a>
                                                        <button type="button" class="btn btn-sm btn-outline-danger btn-delete" data-url="/manajer/jabatan/hapus/<%= item.id %>">Hapus</button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="3" class="text-center">Belum ada data</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade modal-below-navbar" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Konfirmasi Hapus</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Apakah Anda yakin ingin menghapus data ini?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-dismiss="modal">Batal</button>
                <button type="button" class="btn btn-danger" id="btnConfirmDelete">Hapus</button>
            </div>
        </div>
    </div>
</div>

<%- include('../../../partials/scripts/__script-dashboard.ejs') %>
